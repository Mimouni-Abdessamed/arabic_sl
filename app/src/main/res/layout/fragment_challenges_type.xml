<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/challenges_type_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#1E1E1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:spacing="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_letters_challenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:backgroundTint="#2D2D2D">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/letters_challenges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Letters Challenges"
                android:textColor="#FFFFFF"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_numbers_challenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:backgroundTint="#2D2D2D">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/numbers_challenges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numbers Challenges"
                android:textColor="#FFFFFF"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_words_challenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:padding="8dp"
            android:backgroundTint="#2D2D2D">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/words_challenges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Words Challenges"
                android:textColor="#FFFFFF"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
