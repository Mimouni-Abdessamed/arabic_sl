<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/challenges_type_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp">

        <!-- Letters Challenge Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_letters_challenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/mp_color_primary_variant">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/letters_challenges"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="تحدي الحروف"
                android:textSize="18sp"
                android:textColor="@color/mp_color_primary"
                app:strokeColor="@color/mp_color_primary"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:icon="@drawable/ic_letters"
                app:iconTint="@color/mp_color_primary"
                app:iconPadding="8dp"
                app:iconGravity="start"/>
        </androidx.cardview.widget.CardView>

        <!-- Numbers Challenge Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_numbers_challenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/mp_color_primary_variant">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/numbers_challenges"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="تحدي الأرقام"
                android:textSize="18sp"
                android:textColor="@color/mp_color_primary"
                app:strokeColor="@color/mp_color_primary"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:icon="@drawable/ic_numbers"
                app:iconTint="@color/mp_color_primary"
                app:iconPadding="8dp"
                app:iconGravity="start"/>
        </androidx.cardview.widget.CardView>

        <!-- Words Challenge Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_words_challenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/mp_color_primary_variant">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/words_challenges"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="تحدي الكلمات"
                android:textSize="18sp"
                android:textColor="@color/mp_color_primary"
                app:strokeColor="@color/mp_color_primary"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:icon="@drawable/ic_letters"
                app:iconTint="@color/mp_color_primary"
                app:iconPadding="8dp"
                app:iconGravity="start"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>