<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/challenges_type_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mp_color_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Training Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/mp_color_primary_variant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_training_expand"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="التدريبات"
                    android:textSize="18sp"
                    android:textColor="@color/mp_color_primary"
                    app:icon="@drawable/ic_arrow_down"
                    app:iconTint="@color/mp_color_primary"
                    app:iconGravity="end"
                    app:strokeColor="@color/mp_color_primary"
                    app:strokeWidth="1dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                <LinearLayout
                    android:id="@+id/sub_buttons_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/lettersButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:text="الحروف"
                        android:textSize="16sp"
                        android:textColor="@color/mp_color_primary"
                        app:icon="@drawable/ic_letters"
                        app:iconTint="@color/mp_color_primary"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/numbersButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:text="الأرقام"
                        android:textSize="16sp"
                        android:textColor="@color/mp_color_primary"
                        app:icon="@drawable/ic_numbers"
                        app:iconTint="@color/mp_color_primary"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/wordsButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:text="الكلمات"
                        android:textSize="16sp"
                        android:textColor="@color/mp_color_primary"
                        app:icon="@drawable/ic_words"
                        app:iconTint="@color/mp_color_primary"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Challenges Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_challenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/mp_color_primary_variant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_challenges_expand"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="التحديات"
                    android:textSize="18sp"
                    android:textColor="@color/mp_color_primary"
                    app:icon="@drawable/ic_arrow_down"
                    app:iconTint="@color/mp_color_primary"
                    app:iconGravity="end"
                    app:strokeColor="@color/mp_color_primary"
                    app:strokeWidth="1dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                <LinearLayout
                    android:id="@+id/challenges_sub_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/letters_challenge_btn"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:text="تحدي الحروف"
                        android:textSize="16sp"
                        android:textColor="@color/mp_color_primary"
                        app:icon="@drawable/ic_letters"
                        app:iconTint="@color/mp_color_primary"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/numbers_challenge_btn"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:text="تحدي الأرقام"
                        android:textSize="16sp"
                        android:textColor="@color/mp_color_primary"
                        app:icon="@drawable/ic_numbers"
                        app:iconTint="@color/mp_color_primary"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Quiz Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/mp_color_primary_variant">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/quizButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="الإختبارات"
                android:textSize="18sp"
                android:textColor="@color/mp_color_primary"
                app:icon="@drawable/ic_quiz"
                app:iconTint="@color/mp_color_primary"
                app:strokeColor="@color/mp_color_primary"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>